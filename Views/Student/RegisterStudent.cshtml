@using AW_UniversityManagementMvcApp.Models.Entity_Models
@model AW_UniversityManagementMvcApp.Models.Student
@{
    ViewBag.Title = "Register Student";
    List<Department> departments = ViewBag.department;
}
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<style>
    label.error {
        color: red;
        font-style: italic;
    }
</style>
<h2>Register Student</h2>
@if (ViewBag.Message != null)
{
    <label class="label-success">@ViewBag.Message</label>
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "studentRegisterForm", @style = "padding: 5%" }))
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(x => x.Name, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Enter Name" })
                @Html.ValidationMessageFor(x => x.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Email, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Enter Email" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.ContactNo, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.ContactNo, new { @class = "form-control", placeholder = "Enter Contact No." })
                @Html.ValidationMessageFor(m => m.ContactNo)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Date, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Date, new { @class = "form-control", placeholder = "Enter Date" })
                @Html.ValidationMessageFor(m => m.Date)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Address, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", placeholder = "Enter Address" })
                @Html.ValidationMessageFor(m => m.Address)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DepartmentId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.DropDownListFor(model => model.DepartmentId, new SelectList(ViewBag.department, "Id", "Name"), "--select--", "")
                @Html.ValidationMessageFor(model => model.DepartmentId)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Register</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Student Index", "Index")
</div>
<script src="~/Scripts/jquery-3.1.1.js"></script>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<script>

    $("#Date").datepicker({
        dateFormat: 'yy-mm-dd',
        yearRange: "1920:2020",
        changeMonth: true,
        changeYear: true
    });

</script>
